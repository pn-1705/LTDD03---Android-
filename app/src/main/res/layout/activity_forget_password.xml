<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activity.ForgetPasswordActivity">

    <ImageView
        android:layout_width="372dp"
        android:layout_height="93dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="200dp"
        android:src="@drawable/fp"></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:gravity="center"
        android:text="Quên mật khẩu ?"
        android:includeFontPadding="false"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginBottom="40dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp">


        <com.hbb20.CountryCodePicker
            android:id="@+id/ccp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            app:ccp_defaultPhoneCode="84"
            app:ccp_showNameCode="false"
            tools:ccp_textSize="20dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_phone_forgetpassword"
            android:hint="Số điện thoại"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        </com.google.android.material.textfield.TextInputEditText>
    </LinearLayout>
    <Button

        android:layout_margin="20dp"
        android:id="@+id/btn_ContinueForgetPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:text="TIẾP TỤC"
        android:textStyle="bold"
        android:textColor="#000"
        android:transitionName="btn_LogIn_Tran"></Button>

</LinearLayout>